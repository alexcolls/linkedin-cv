# LinkedIn CV Generator Configuration
# Copy this file to .env and fill in your values

# ==========================================
# LinkedIn Profile
# ==========================================

# Your LinkedIn profile URL or username
# You can use either:
#   - Full URL: LINKEDIN_PROFILE_URL="https://www.linkedin.com/in/yourprofile/"
#   - Username only: LINKEDIN_PROFILE_URL="yourprofile"
LINKEDIN_PROFILE_URL=""

# ==========================================
# Output Settings
# ==========================================

# Directory where generated PDFs and data will be saved
# Default: ./output
OUTPUT_DIR="./output"

# Custom template path for PDF generation (optional)
# Leave empty to use the default template
TEMPLATE_PATH=""

# ==========================================
# Logging
# ==========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL="INFO"

# Optional: Save logs to a file
# Leave empty to only log to console
LOG_FILE=""

# ==========================================
# Browser Settings
# ==========================================

# Run browser in headless mode (no GUI)
# Options: true, false
# Default: true
HEADLESS="true"

# Browser timeout in seconds
# Default: 30
BROWSER_TIMEOUT="30"

# Page load timeout in seconds
# Default: 60
PAGE_LOAD_TIMEOUT="60"

# Custom user agent (optional)
# Leave empty to use Playwright's default
USER_AGENT=""

# ==========================================
# Scraping Settings
# ==========================================

# Pause duration between scroll actions (in seconds)
# Default: 1.5
SCROLL_PAUSE="1.5"

# Maximum number of scroll attempts to load dynamic content
# Default: 10
MAX_SCROLL_ATTEMPTS="10"

# ==========================================
# Session Management
# ==========================================

# Directory for storing browser session data
# Leave empty to use default location
SESSION_DIR=""

# Enable session encryption (recommended for security)
# Options: true, false
# Default: false
ENCRYPT_SESSION="false"

# Encryption key for session data (required if ENCRYPT_SESSION=true)
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=""
