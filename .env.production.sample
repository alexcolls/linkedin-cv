# LinkedIn CV Generator - Production Environment Configuration
# Copy this file to .env for production deployment

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Encryption key for session data (generate with: python -m src.cli --generate-key)
# IMPORTANT: Keep this secret and never commit to version control
ENCRYPTION_KEY=your_encryption_key_here

# LinkedIn profile URL (if using as default)
# PROFILE_URL=https://www.linkedin.com/in/your-username/

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Output directory for generated CVs
OUTPUT_DIR=./output

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=false

# ============================================================================
# PDF GENERATION SETTINGS
# ============================================================================

# Default CV theme (modern, creative, executive, classic)
DEFAULT_THEME=modern

# Enable QR codes by default (true/false)
ENABLE_QR_CODE=true

# Default colors (hex format)
# DEFAULT_PRIMARY_COLOR=#2563eb
# DEFAULT_ACCENT_COLOR=#f59e0b

# ============================================================================
# BROWSER SETTINGS
# ============================================================================

# Run browser in headless mode (true/false)
HEADLESS=true

# Browser timeout in milliseconds
BROWSER_TIMEOUT=30000

# Maximum number of browser instances
MAX_BROWSER_INSTANCES=3

# ============================================================================
# SESSION MANAGEMENT
# ============================================================================

# Session directory
SESSION_DIR=./sessions

# Session expiry in days
SESSION_EXPIRY_DAYS=30

# ============================================================================
# RATE LIMITING (Future feature)
# ============================================================================

# Enable rate limiting (true/false)
# RATE_LIMITING_ENABLED=true

# Requests per minute limit
# RATE_LIMIT_RPM=10

# ============================================================================
# MONITORING & LOGGING (Future features)
# ============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable Prometheus metrics (true/false)
# PROMETHEUS_ENABLED=false

# Prometheus metrics port
# PROMETHEUS_PORT=9090

# ============================================================================
# DOCKER SETTINGS
# ============================================================================

# Container user ID (should match host user for volume permissions)
PUID=1000
PGID=1000

# Container timezone
TZ=UTC

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Allow insecure connections (only for development)
ALLOW_INSECURE=false

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Allowed origins for CORS (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://your-domain.com
